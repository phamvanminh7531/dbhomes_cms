server {
    listen 80;
    server_name testing.dbhomes.com.vn;

    # Chuy·ªÉn HTTP sang HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name testing.dbhomes.com.vn;

    # üîê ƒê∆∞·ªùng d·∫´n ch·ª©ng ch·ªâ SSL
    ssl_certificate /etc/nginx/ssl/dbhomes.com.vn.pem;
    ssl_certificate_key /etc/nginx/ssl/dbhomes.com.vn.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    location = /robots.txt {
        alias /var/www/dbhomes_cms/static/robots.txt;
    }

    # Static files
    location /static/ {
        alias /var/www/dbhomes_cms/staticfiles/;
        access_log off;
        expires 30d;
        add_header Cache-Control "public, max-age=2592000, must-revalidate";

        open_file_cache          max=1000 inactive=20s;
        open_file_cache_valid    30s;
        open_file_cache_min_uses 2;
        open_file_cache_errors   on;
    }

    # Media files
    location /media/ {
        alias /var/www/dbhomes_cms/media/;

        add_header Accept-Ranges bytes;
        add_header Cache-Control "public, max-age=31536000, must-revalidate";

        sendfile on;
        tcp_nopush on;
        tcp_nodelay on;

        types {
            image/svg+xml svg;
            image/svg+xml svgz;
            video/mp4 mp4;
            video/webm webm;
            video/ogg ogv;
        }
        default_type application/octet-stream;

        access_log off;
    }

    # Django qua Gunicorn
    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn.sock;
        proxy_set_header X-Forwarded-Proto https;
            # NgƒÉn m·ªçi cache HTML
    proxy_cache off;
    add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0";
    add_header Pragma "no-cache";
    add_header Expires "0";
    }
}
